{% extends '@App/layout.html.twig' %}

{% block title %}Contacts{% endblock %}

{% block content %}

    <div class="container">
        <div class="col-md-6 col-md-offset-3 top-margined">
            <h2>Please send us your feedback</h2>

            <form action="{{ path('contacts') }}" method="post">

                {% include '@App/components/form-errors.html.twig' %}
                {% include '@App/components/form-success.html.twig' %}

                <div class="form-group">
                    <input class="form-control" id="name" placeholder="Name" name="name"
                           value="{{ fields.name | default("") }}">
                </div>

                <div class="form-group">
                    <input type="email" class="form-control" id="email" placeholder="Email" name="email"
                           value="{{ fields.email | default("") }}">
                </div>

                <div class="form-group">
                    <textarea class="form-control" id="message" rows="4" placeholder="Message" name="message">{{ fields.message | default("") }}</textarea>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>

        </div>
    </div>

{% endblock %}