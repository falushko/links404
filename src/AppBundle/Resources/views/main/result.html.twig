{% extends '@App/layout.html.twig' %}

{% block title %}{{ 'result'|trans }}{% endblock %}

{% block content %}
    <div class="container">
        <h2>{{ host }}</h2>

        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <tr class="active"><th>Broken Link</th><th>Page</th><th>Status</th></tr>

                {% for link in links['brokenLink'] %}
                    <tr>
                        <td><a target="_blank" href="{{ link.link }}">{{ link.link }}</a></td>
                        <td><a target="_blank" href="{{ link.page }}">{{ link.page }}</a></td>
                        <td>{{ link.status }}</td>
                    </tr>
                {% endfor %}

                {% for link in links['brokenMedia'] %}
                    <tr>
                        <td><a target="_blank" href="{{ link.link }}">{{ link.link }}</a></td>
                        <td><a target="_blank" href="{{ link.page }}">{{ link.page }}</a></td>
                        <td>{{ link.status }}</td>
                    </tr>
                {% endfor %}

            </table>
        </div>
    </div>
{% endblock %}
