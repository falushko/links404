{% extends '@App/layout.html.twig' %}

{% block title %}{{ 'result'|trans }}{% endblock %}

{% block content %}
    <div class="container">
        <h2>{{ host }}</h2>

        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <tr class="active"><th>Broken Link</th><th>Page</th><th>Status</th></tr>

                {% for link in links['brokenLink'] %}
                    {% include '@App/@partials/link-row.html.twig' %}
                {% endfor %}

                {% for link in links['brokenMedia'] %}
                    {% include '@App/@partials/link-row.html.twig' %}
                {% endfor %}

            </table>
        </div>
    </div>
{% endblock %}
